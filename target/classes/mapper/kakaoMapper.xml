<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cheolhyeon.app.domain.KakaoUser">
    <select id="selectKakaoAll" resultType="int">
        select count(*)
        from kakao_user;
    </select>

    <select id="selectKakao" parameterType="map" resultType="com.cheolhyeon.app.domain.KakaoUser">
        select k_no, k_name, k_email
        from kakao_user
        where k_name = #{k_name} and k_email = #{k_email};
    </select>

    <insert id="insert" parameterType="map">
        insert into kakao_user
        (k_name, k_email)
        values(#{k_name}, #{k_email})
    </insert>
</mapper>